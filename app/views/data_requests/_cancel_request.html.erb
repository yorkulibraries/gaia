<div class="modal hide fade" id='cancel_request_modal_<%= data_request.id %>' >
  <%= simple_form_for data_request, url: cancel_data_request_path(data_request), :html => {:id => "edit_data_request_for_cancel_#{data_request.id}"}, method: :post do |f| %>
	
 	 <div class="modal-header">
	  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		  <h3>Cancel This Request</h3>
  	</div>
	  <div class="modal-body">
	    <p><strong>Please note:</strong></p> 
	    <ul>
	      <li>Once cancelled, the request cannot be changed again.</li>
	      <li>All attachments associated with this request will be permanently deleted.</li>
	    </ul>
      
			<%= f.input :cancellation_reason, label: "A Reason must be provided", as: :text, input_html: {:rows => 5, :cols => 200, :class => "span5  "}, title: "A reason must be provided"  %>
			<p class="muted">Cancelling the request will notify the requester.</p>
	  </div>
	  <div class="modal-footer">
		  <a href="#" class="btn" data-dismiss="modal">I changed my mind, go back</a>
		  <%= f.button :submit, "Confirm Cancel", class: "btn btn-danger"%>
	  </div>

	<% end %>
</div>