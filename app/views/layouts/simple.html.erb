<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">Ã—</a>
          <%= msg %>
        </div>
      <% end %>

      <header>
        <% if show_title? || content_for?(:title_html) %>
          <%= content_tag :h1, yield(:title), class: "h2" %>
          <%= yield (:title_html) if content_for?(:title_html)%>
        <% end %>
      </header>

      <main>
        <%= yield %>
      </main>
      
      <footer>
        <p class="text-muted">&copy; York University Libraries. All rights reserved. (Version: <%= Rails.application.config.git_commit_hash %>)</p>
      </footer>  
    </div>
  </body>
</html>
